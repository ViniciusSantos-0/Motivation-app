<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/lenearMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageAll"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_all"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imageHappy"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_happy"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imageSun"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sun"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textNameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lenearMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="@string/phrase"
        android:textSize="22sp" />

    <View
        android:layout_width="128dp"
        android:layout_height="2dp"
        android:layout_below="@+id/textPhrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/pink" />

    <Button
        android:id="@+id/buttonPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_phrasee"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        android:background="@drawable/ripple_button"
        android:textColor="@color/white"/>

</RelativeLayout>